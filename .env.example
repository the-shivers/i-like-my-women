# OpenRouter API Key (required)
OPENROUTER_API_KEY=your_api_key_here

# Flask Secret Key (required for production)
# Generate with: python -c "import os; print(os.urandom(24).hex())"
FLASK_SECRET_KEY=your_secret_key_here

# Database Path (optional - for Railway volume persistence)
# Local dev: defaults to 'comedy.db' in project root
# Railway production: set to '/data/comedy.db' to use persistent volume
# DATABASE_PATH=/data/comedy.db

# Flask Configuration (optional)
FLASK_DEBUG=False
PORT=5001
HOST=0.0.0.0
